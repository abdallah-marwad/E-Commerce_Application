<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_12sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDialog"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:src="@drawable/login" />

        <TextView
            android:id="@+id/dialogTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Payment Failed"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialogTxtHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:textColor="@color/g_gray700"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Please try again later , there may be a problem problem"
            android:textSize="@dimen/_11ssp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_14sdp"

            >

            <Button
                android:id="@+id/dialog_btn_pos"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/blue_background"
                android:text="Done"
                android:layout_weight="1"

                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_btn_neg"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/red_border"
                android:text="No"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/g_red"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>