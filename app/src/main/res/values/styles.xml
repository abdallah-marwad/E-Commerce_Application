<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h4">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>
    <style name="titleTxtStyle">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <style name="titleHintTxtStyle">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/g_gray500</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
    <style name="recyclerBoldTitle">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>
    <style name="offerPercentageTitle">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/g_red</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>
    <style name="seeMoreTxtStyle">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/app_theme_color</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="blueButtonStyle">
        <item name="android:background">@drawable/blue_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
    </style>




    <dimen name="h4TextSize">@dimen/_27ssp</dimen>
    <dimen name="h2TextSize">@dimen/_13ssp</dimen>
    <dimen name="h3TextSize">@dimen/_17ssp</dimen>
    <dimen name="screenPadding">@dimen/_12sdp</dimen>



    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">

    <item name="android:windowIsFloating">false</item>

    <item name="android:statusBarColor">@android:color/transparent</item>

    <item name="android:windowSoftInputMode">adjustResize</item>

    </style>
    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

    </style>


    <!-- LoadingDialog theme -->
    <style name="LoadingTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>